<style>
    @import url(http://fonts.googleapis.com/earlyaccess/nanumgothiccoding.css);
    .ngc {font-family: 'Nanum Gothic Coding'; color:#333333;}
    .ngc1 {font-family: 'Nanum Gothic Coding'; color: gray;}
    .ngc2 {font-family: 'Nanum Gothic Coding'; color: red;}
    .update {font-size: 15px; font-weight: bold;}

</style>


<br>
<h2 class="ngc">회원정보 수정 </h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
<br>
  <div class="row ngc">
  <div class="col-md-4"></div>
  <div class="col-md-4"><div class="form-group">
    <%= f.input :email, required: true, autofocus: true, input_html: { class: 'form-control' }, label: false %>
  </div>
  <div class="form-group ngc">
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>
  </div></div>
  <div class="col-md-4"></div>
</div>

<div class="row ngc">
  <div class="col-md-4"></div>
  <div class="col-md-4"> <div class="form-group">
    <%= f.input :username, autocomplete: "off", placeholder: "사이트에서 사용할 이름을 적어주세요.", required: false, input_html: { class: 'form-control' }, label: false %>
  </div></div>
  <div class="col-md-4"></div>
</div>

<div class="row ngc">
  <div class="col-md-4"></div>
  <div class="col-md-4"> <div class="form-group">
    <%= f.input :password, autocomplete: "off", placeholder: "새 비밀번호를 적어주세요", required: false, input_html: { class: 'form-control' }, label: false %>
  </div></div>
  <div class="col-md-4"></div>
</div>

<div class="row ngc">
  <div class="col-md-4"></div>
  <div class="col-md-4"><div class="form-group">
    <%= f.input :password_confirmation, placeholder: "다시한번 적어주세요", required: false, input_html: { class: 'form-control' }, label: false %>
  </div></div>
  <div class="col-md-4"></div>
</div>

<div class="row ngc">
  <div class="col-md-4"></div>
  <div class="col-md-4"> <div class="form-group">
    <%= f.input :current_password, placeholder: "현재 비밀번호를 적어주세요", required: true, input_html: { class: 'form-control' }, label: false %>
  </div></div>
  <div class="col-md-4"></div>
</div>

<br>
<div class="row ngc">
  <div class="col-md-4"></div>
  <div class="col-md-4"> <%= f.button :submit, "적용", class: 'btn btn-large btn-block btn-info update' %>
<% end %></div>
  <div class="col-md-4"></div>
</div>
<br>








<hr>

<h3 class="ngc">회원 탈퇴</h3>

<p class="ngc1">정말 탈퇴하실건가요? <%= link_to "탈퇴하기", registration_path(resource_name), data: { confirm: "탈퇴 하시겠습니까?" }, method: :delete, class: "ngc2" %></p>

<%= link_to "뒤로가기", :back, class: "btn btn-default" %>
