<style>
      @import url(http://fonts.googleapis.com/earlyaccess/nanumgothiccoding.css);
      .ngc {font-family: 'Nanum Gothic Coding'; color:#333333;}
    </style>


<h2 class="ngc">비밀번호를 바꾸실 건가요?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password, label: "새로운 비밀번호를 입력해주세요", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
    <%= f.input :password_confirmation, label: "다시한번 입력해주세요", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "비밀번호 변경" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
