<style>
.br { border-top:1px solid #eaeaea; border-bottom:1px solid #eaeaea; margin-bottom: 10px; margin-top:10px;}
.margin {margin-top: 3px; margin-bottom: 3px;}
</style>



<li id="commentf_<%=commentf.id %>">
  <strong>
    <% if commentf.user.id == current_user.id %>
      <%= commentf.user.present? ? commentf.user.username : "n/a" %>
    <% else %>
     익명
    <% end %>
  </strong>
  [<%= commentf.created_at.strftime(" %Y년 %m월 %d일 %H시 %M분") %>]
  <% if commentf.user.id == current_user.id %>
    <%= link_to fa_icon("times-circle-o"), [commentf.postf, commentf], method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
  <% end %>
  <div class="margin"></div>
  <%= commentf.body %>
  <div class="br"></div>
</li>
