<style>
      @import url(http://fonts.googleapis.com/earlyaccess/hanna.css);
      @import url(http://fonts.googleapis.com/earlyaccess/nanumbrushscript.css);
      @import url(http://fonts.googleapis.com/earlyaccess/nanumgothic.css);
      @import url(http://fonts.googleapis.com/earlyaccess/nanumgothiccoding.css);
      @import url(http://fonts.googleapis.com/earlyaccess/nanummyeongjo.css);
      @import url(http://fonts.googleapis.com/earlyaccess/nanumpenscript.css);
      @import url(http://fonts.googleapis.com/earlyaccess/jejugothic.css);
      @import url(http://fonts.googleapis.com/earlyaccess/kopubbatang.css);
      @import url(http://fonts.googleapis.com/earlyaccess/notosanskr.css);
      .hn {font-family: 'Hanna';}
      .nbs {font-family: 'Nanum Brush Script';}
      .ng {font-family: 'Nanum Gothic';}
      .ngc {font-family: 'Nanum Gothic Coding'; color:#333333;}
      .nm {font-family: 'Nanum Myeongjo';}
      .nps {font-family: 'Nanum Pen Script';}
      .jjg {font-family: 'Jeju Gothic';}
      .kp {font-family: 'KoPub Batang';}
      .nts {font-family: 'Noto Sans KR';}
      .right {text-align:right; margin-top: 5px;}
    </style>


<br>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4"><h2 class="ngc"><%= @post.title %></h2>
  <p id="notice"><%= notice %></p></div>
  <div class="col-md-4"><h2 class="ngc"><p align="center"><%= "좋아요 #{@post.likes.count}" %></p></h2></div>
  <%= likeBtn(@hasLike) %>
</div>



<div class="row ngc">
  <div class="col-md-1"></div>
  <div class="col-md-10">

    <div class='post'>


      <div class="content">
        <%= simple_format @post.content %>
      </div>

      <div class="user">
        <strong>작성자</strong>
        <%= User.find(@post.user_id).username %>
      </div>
    </div>


  <div class="right">
    <% if @post.user_id == current_user.id %>
      <%= link_to 'Edit', edit_lecture_post_path(@post.lecture, @post), class:'btn btn-default btn-sm' %>
      <%= link_to 'Destroy', [@post.lecture, @post], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default btn-sm' %>
    <% end %>

    <%= link_to 'Back', lecture_posts_path, class: 'btn btn-default btn-sm' %>
</div>


    <%= render :partial => "comments/comments" %>


    </div>
  <div class="col-md-1"></div>
</div>
