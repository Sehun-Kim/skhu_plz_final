<h2><%= @lecture.name %> 게시판입니다.</h2>

<table class="table">
  <thead>
    <tr>
      <th>제목</th>
      <th>작성 시간</th>
      <th>작성자</th>
      <th>Data actions</th>
    </tr>
  </thead>

<p id="notice"><%= notice %></p>
<h1>
  <%= "좋아요 갯수 #{@lecture.likes.count}" %>
</h1>
<%= likeBtn(@hasLike) %>
  <tbody>
   <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %> <small>( <%= post.comments.size %> )</small></td>
      <td><%= post.created_at %></td>
      <td><%= post.user.present? ? post.user.email : "n/a" %></td>
      <td>
        <%= link_to 'Show', [post.lecture, post], class:'btn btn-default' %>
        <% if post.user.email == current_user %>
          <%= link_to 'Edit', edit_lecture_post_path(post.lecture, post), class:'btn btn-default' %>
          <%= link_to 'Destroy', [post.lecture, post], method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-default' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= link_to '글쓰기', new_lecture_post_path, class: 'btn btn-default' %>
<%= will_paginate @posts %>